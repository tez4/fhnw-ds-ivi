{
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=F401,E402"  // "--ignore=E402,F841,F401,E302,E305",
    ],
    "autopep8.args": ["--max-line-length=200", "--experimental", "--ignore", "W292"],
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.autopep8",
    },
    "python.formatting.autopep8Args": ["--max-line-length", "200", "--experimental", "--ignore", "W292"],
    "notebook.formatOnSave.enabled": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never"
    },
    "editor.fontSize": 13,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [120],
    "errorLens.enabled": true,
    "errorLens.messageBackgroundMode": "message",
    "errorLens.excludeBySource": ["cSpell"],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#37373d",
        "activityBar.activeBackground": "#5dc09c",
        "activityBar.background": "#5dc09c",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#8f47b8",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#5dc09c",
        "statusBar.background": "#42a883",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#348366",
        "statusBarItem.remoteBackground": "#42a883",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#42a883",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#42a88399",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "autoDocstring.docstringFormat": "google",
    "cSpell.language": "en,de-de",
    "cSpell.words": [
        "astype",
        "barmode",
        "dataframe",
        "docstrings",
        "dropna",
        "dtype",
        "iloc",
        "isin",
        "iterrows",
        "valign",
    ],
    "peacock.color": "#42a883",
    "prettier.requireConfig": true,
    "markdownlint.config": {
        "MD033": false
    }
}